<navbar id="navbar"><!--导航栏-->
  <nav id="title-nav">
    <a href="<%- url_for("/") %>">
      <div id="vivia-logo"><!--导航栏左侧logo-->
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
      <div><%- config.title %> </div><!--文字-->
    </a>
  </nav>
  <nav id="main-nav"><!--导航栏-->
    <% for (var i in theme.menu){ %>
      <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
    <% } %>
  </nav>
  <nav id="sub-nav"><!--导航栏图标-->
    <a id="theme-btn" class="nav-icon">
      <span class="material-symbols-rounded light-mode-icon">wb_sunny</span><!--白天-->
      <span class="material-symbols-rounded dark-mode-icon">dark_mode</span><!--黑夜-->
    </a>
    <% if (theme.rss){ %>
      <a id="nav-rss-link" class="nav-icon mobile-hide" href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>">
        <span class="material-symbols-rounded rss">rss_feed</span><!--订阅-->
      </a>
    <% } %>
    <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>"><!--搜索-->
      <span class="material-symbols-rounded">search</span>
    </a>
    <div id="nav-menu-btn" class="nav-icon">
      <span class="material-symbols-rounded">menu</span><!--菜单栏-->
    </div>
  </nav>
</navbar>
<div id="nav-dropdown" class="hidden">
  <div id="dropdown-link-list"><!--下拉菜单-->
    <% for (var i in theme.menu){ %>
      <a class="nav-dropdown-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
    <% } %>
    <% if (theme.rss) { %>
      <a class="nav-dropdown-link" href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>">RSS</a>
    <% } %>
    </div>
</div>
<script>
  let dropdownBtn = document.getElementById("nav-menu-btn");/*下拉按键*/
  let dropdownEle = document.getElementById("nav-dropdown");
  dropdownBtn.onclick = function() {/*菜单栏点击*/
    dropdownEle.classList.toggle("hidden");
  }
</script>
